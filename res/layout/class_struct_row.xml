<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:padding="0dip" >

    <!--
    <TextView
        android:id="@+id/element_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dip"
        android:text="0"
        android:textSize="18sp" >
    </TextView>
    -->


    <!-- Si userà un layout per contenere il tipo "grande" (class,method,field) e delle imageview all'interno più piccole per i modificatori -->

    <ImageView
        android:id="@+id/element_type"
        android:layout_width="24dip"
        android:layout_height="24dip"
        android:contentDescription="ItemType"
        android:padding="2dip" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/is_static"
                android:layout_width="12dip"
                android:layout_height="12dip"
                android:visibility="gone"
                android:src="@drawable/isstatic" />
            <ImageView
                android:id="@+id/is_abstract"
                android:layout_width="12dip"
                android:layout_height="12dip"
                android:visibility="gone"
                android:src="@drawable/isabstract" />
            <ImageView
                android:id="@+id/is_final"
                android:layout_width="12dip"
                android:layout_height="12dip"
                android:visibility="gone"
                android:src="@drawable/isfinal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <ImageView
                android:id="@+id/is_transient"
                android:layout_width="12dip"
                android:layout_height="12dip"
                android:visibility="gone"
                android:src="@drawable/istransient" />
            <ImageView
                android:id="@+id/is_volatile"
                android:layout_width="12dip"
                android:layout_height="12dip"
                android:visibility="gone"
                android:src="@drawable/isvolatile" />
            <ImageView
                android:id="@+id/is_native"
                android:layout_width="12dip"
                android:layout_height="12dip"
                android:visibility="gone"
                android:src="@drawable/isnative" />
            <ImageView
                android:id="@+id/is_synchronized"
                android:layout_width="12dip"
                android:layout_height="12dip"
                android:visibility="gone"
                android:src="@drawable/issynchronized" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/element_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="1dip"
        android:text="Text"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/spacer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:text="-"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/elem_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Small Text"
        android:textSize="12sp" />

</LinearLayout>